<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VinuezaValverdeVintimilla_P2.Views.Principal"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="LightYellow">


    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Image
                Source="logo.png"
                HeightRequest="200"
                HorizontalOptions="Center" />
        <Label 
            Text="Bienvenido a CheeseChat"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
                x:Name="CounterBtn"
                Text=" Ingresar "
                BackgroundColor="Moccasin"
                Margin="20"
                TextColor="Black"
                FontSize="20"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        <Button
                x:Name="GetUserInfoBtn"
                Text="Iniciar con Microsoft"
                SemanticProperties.Hint="Loads user information from Microsoft Graph"
                Clicked="GetUserInfoBtn_Clicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>


</ContentPage>